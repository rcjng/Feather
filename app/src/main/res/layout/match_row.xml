            ]]>

            <ImageView
                android:id="@+id/match_photo_view"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:contentDescription="@string/profile_picture"
                android:scaleX="0.8"
                android:scaleY="0.8"
                tools:ignore="ImageContrastCheck"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="0dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/match_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forappearance"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="" />

                <TextView
                    android:id="@+id/match_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textAlignment="gravity"
                    android:textColor="@color/dark_seafoam"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_num_courses_view"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/seafoam"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_num_courses_quarter_view"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/seafoam"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_profile_id_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

